<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Aadhar_Number</fullName>
    <active>false</active>
    <description>Aadhar Number Format (eg:1234 5678 9865)</description>
    <errorConditionFormula>NOT( REGEX( AM_Owner_Adhar_Number__c,&quot;^[0-9]{4}\\s[0-9]{4}\\s[0-9]{4}&quot;) )</errorConditionFormula>
    <errorDisplayField>AM_Owner_Adhar_Number__c</errorDisplayField>
    <errorMessage>Aadhar Number Format (eg:1234 5678 9865)</errorMessage>
</ValidationRule>
